<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:id="@+id/bg">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginTop="2dp"
             android:id="@+id/linear2">

            <com.google.android.material.textfield.TextInputLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 app:shapeAppearance="@style/Cut"
                 android:layout_margin="3dp"
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                 android:id="@+id/input1">

                <EditText
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:hint="جستجو کنید"
                     android:padding="8dp"
                     android:textColorHint="#FFFFFF"
                     android:textSize="16sp"
                     android:fontFamily="@font/ghostfont"
                     android:textColor="#FDA893"
                     android:focusable="true"
                     android:id="@+id/editorser" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginTop="2dp"
             android:id="@+id/cuser">

            <com.google.android.material.textfield.TextInputLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 app:shapeAppearance="@style/Cut"
                 android:layout_margin="3dp"
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                 android:id="@+id/input2">

                <EditText
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:hint="جایگزین کردن متن"
                     android:padding="8dp"
                     android:textColorHint="#FFFFFF"
                     android:textSize="16sp"
                     android:fontFamily="@font/ghostfont"
                     android:textColor="#FDA893"
                     android:focusable="true"
                     android:id="@+id/editorrep" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:padding="8dp"
             android:orientation="horizontal"
             android:id="@+id/linear4">

            <Ninja.coder.Ghostemane.code.layoutmanager.btnCompat
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:padding="8dp"
                 android:textSize="12sp"
                 android:layout_marginLeft="2dp"
                 android:layout_marginRight="2dp"
                 android:textColor="#000000"
                 android:layout_weight="1"
                 android:id="@+id/repall"
                 android:text="repall" />

            <Ninja.coder.Ghostemane.code.layoutmanager.btnCompat
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:padding="8dp"
                 android:textSize="12sp"
                 android:layout_marginLeft="2dp"
                 android:layout_marginRight="2dp"
                 android:textColor="#000000"
                 android:layout_weight="1"
                 android:id="@+id/rep"
                 android:text="rep" />

            <Ninja.coder.Ghostemane.code.layoutmanager.btnCompat
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:padding="8dp"
                 android:textSize="12sp"
                 android:layout_marginLeft="2dp"
                 android:layout_marginRight="2dp"
                 android:textColor="#000000"
                 android:layout_weight="1"
                 android:id="@+id/mis"
                 android:text="previous" />

            <Ninja.coder.Ghostemane.code.layoutmanager.btnCompat
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:padding="8dp"
                 android:textSize="12sp"
                 android:layout_marginLeft="2dp"
                 android:layout_marginRight="2dp"
                 android:textColor="#000000"
                 android:layout_weight="1"
                 android:id="@+id/ser"
                 android:text="next" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>