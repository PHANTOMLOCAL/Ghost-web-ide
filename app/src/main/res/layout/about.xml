<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <Ninja.coder.Ghostemane.code.PraramnetLayoutNinja
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:id="@+id/linear1">

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="0dp"
             android:layout_width="0dp"
             android:padding="8dp"
             android:id="@+id/recyclerview1" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:padding="8dp"
             android:orientation="horizontal"
             android:id="@+id/linear3">

            <ImageView
                 android:layout_height="40dp"
                 android:layout_width="30dp"
                 android:src="@drawable/icon_helper_code_0_3"
                 android:scaleType="centerInside"
                 android:id="@+id/imageview2" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:padding="8dp"
                 android:textSize="20sp"
                 android:textColor="#E0E0E0"
                 android:id="@+id/textview3"
                 android:text="About  program" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="240dp"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:padding="8dp"
             android:orientation="horizontal"
             android:id="@+id/linear2">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:padding="8dp"
                 android:textSize="20sp"
                 android:translationY="-52.0dp"
                 android:textColor="#FFDCBD"
                 android:id="@+id/textview1"
                 android:text="GhostWeb IDE" />

            <de.hdodenhof.circleimageview.CircleImageView
                 android:layout_height="60dp"
                 android:layout_width="60dp"
                 android:src="@drawable/icon"
                 app:civ_circle_background_color="#000000"
                 android:translationX="155.0dp"
                 android:translationY="-80.0dp"
                 app:civ_border_width="0dp"
                 app:civ_border_overlay="true"
                 app:civ_border_color="#008DCD"
                 android:id="@+id/uo" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:padding="8dp"
             android:id="@+id/recyclerview2" />

    </Ninja.coder.Ghostemane.code.PraramnetLayoutNinja>

</LinearLayout>